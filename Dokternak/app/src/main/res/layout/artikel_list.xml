<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:layout_height="200dp"
    android:background="@drawable/bg_shadow"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ivGambar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        
<!--        <ImageView-->
<!--            android:id="@+id/ivGambar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="100dp"-->
<!--        &lt;!&ndash;            android:src="@drawable/bg_gunung"&ndash;&gt;-->
<!--        />-->

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvIdKtg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="6sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_below="@id/ivGambar"
            android:layout_marginTop="8dp"
            android:textColor="@color/blue"
            android:textSize="10sp"
            android:textStyle="bold"/>

<!--        <TextView-->
<!--            android:id="@+id/tvNamaPenulis"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/tvJudul"-->
<!--            android:layout_marginStart="16dp"-->
<!--            android:layout_toEndOf="@id/ivGambar"-->
<!--            android:hint="Nama Penulis"-->
<!--            android:textSize="15sp" />-->


    </RelativeLayout>

    <View
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>
</LinearLayout>