<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.konsultasi.DetailKonsultasiTekirimActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/img_btn_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_back" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toEndOf="@id/img_btn_back"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/bg_gunung" />

                <TextView
                    android:id="@+id/tv_nama_dokter"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/img_profile"
                    android:text="Nama Petugas"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    />

                <ImageButton
                    android:id="@+id/img_hapus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/delete" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_marginEnd="20dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginTop="130dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Keluhan"
                   android:textSize="12sp"
                   android:textAlignment="center"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentEnd="true"
                   />
           </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kotak_line"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/labelJenis"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Jenis Hewan : "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/labelJenis"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="8dp"
                android:textAlignment="textEnd"
                android:layout_marginEnd="16dp"
                android:textSize="10sp"
                android:text="Kategori"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Hewan : "
                android:textSize="10sp"
                android:layout_toStartOf="@+id/tv_nama_hewan"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/labelNama"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/tv_nama_hewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:textAlignment="textEnd"
                android:textSize="10sp"
                android:text="Nama Hewan"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="18dp"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:textSize="8sp"
                android:text="Tanggal"
                />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_keluhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="30dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="16dp"
                >
                <TextView
                    android:id="@+id/tv_keluhan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textStart"
                    android:textSize="10sp"
                    android:text="@string/lorem_ipsum"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</ScrollView>
